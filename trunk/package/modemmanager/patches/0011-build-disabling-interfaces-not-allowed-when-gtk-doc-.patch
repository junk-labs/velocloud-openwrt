@@ -471,6 +492,9 @@ AM_CONDITIONAL(WITH_INTERFACE_FIRMWARE, test "x$with_interface_firmware" = "xyes
 if test "x$with_interface_firmware" = "xyes"; then
     MM_INTERFACE_FIRMWARE_SUPPORTED=1
