+static int
+vc_leds_all(struct i2c_client *client, u8 value)
+{
+	int err = 0;
+	u8 cmd;
+
+	for(cmd = MAX7314_INTENS_1_0; cmd <= MAX7314_INTENS_15_14; cmd++) {
+		err = vc_write_byte(client, cmd, value);
+		if(err < 0)
+			break;
+	}
+	return(err);
+}
