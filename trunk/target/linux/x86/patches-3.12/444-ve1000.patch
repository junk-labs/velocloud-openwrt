+// request i2c GPIOs;
+// set them to the reset state;
+
+static int
+vc_request_i2c_gpio(void)
+{
+	int err;
+	static bool vc_gpio_requested = 0;
+
+	if(vc_gpio_requested)
+		return(0);
+	vc_gpio_requested = 1;
+	err = gpio_request_one(VC_I2C_GPIO_RST, GPIOF_OUT_INIT_LOW, "vc-i2c-reset");
+	if(err)
+		return(err);
+	err = gpio_request_one(VC_I2C_GPIO_BLINK, GPIOF_OUT_INIT_LOW, "vc-i2c-blink");
+	if(err)
+		return(err);
+	vc_i2c_gpio_reset();
+	return(0);
+}
