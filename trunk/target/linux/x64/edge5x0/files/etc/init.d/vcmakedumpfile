#!/bin/sh /etc/rc.common
# Copyright (C) 2008 OpenWrt.org

START=01

boot() {
        if [ -e /proc/vmcore ] ; then
		/sbin/block mount
                /bin/mkdir -p /velocloud/kcore
                /sbin/makedumpfile -c -d 22 /proc/vmcore /velocloud/kcore/kernel_dump
                if [ $? -eq 0 ] ; then
                        /sbin/reboot -f
                fi
        fi
}
