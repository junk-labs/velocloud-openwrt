+int
+hostapd_get_hacks(char *arg)
+{
+	char *s;
+	int hacks = 0;
+
+	do {
+		s = strchr(arg, ',');
+		if(s)
+			*s++ = 0;
+		if( !strcmp(arg, "no-olbc"))
+			hacks |= HOSTAPD_HACK_NO_OLBC;
+		else
+			wpa_printf(MSG_ERROR, "unknown hack: %s", arg);
+		arg = s;
+	} while(arg && *arg);
+
+	return(hacks);
+}
