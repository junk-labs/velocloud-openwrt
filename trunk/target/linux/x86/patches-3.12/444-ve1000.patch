+// create low-pulse on VC_I2C_GPIO_RST to reset controllers;
+// keept BLINK input low;
+
+static void
+vc_i2c_gpio_reset(void)
+{
+	gpio_set_value(VC_I2C_GPIO_RST, 0);
+	usleep_range(1000, 2000);
+	gpio_set_value(VC_I2C_GPIO_RST, 1);
+}
