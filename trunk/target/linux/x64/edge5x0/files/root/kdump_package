#!/bin/sh

CURR_DATE=`date +%Y-%m-%d:%H:%M:%S`
COREDUMP_TMP_PATH=/tmp
COREDUMP_PATH=/velocloud/kcore

/usr/sbin/crash /vmlinux.kdump ${COREDUMP_PATH}/kernel_dump < /root/crash_exec > ${COREDUMP_PATH}/kernel-core.${CURR_DATE}.txt 2> /dev/null

if [ $? -eq 0 ] ; then
	touch ${COREDUMP_PATH}/.kernel-core-new.${CURR_DATE}
	sync
	rm -f ${COREDUMP_PATH}/kernel_dump
	sync
fi
