opengt
 set com 115200n81
 set comecho off
 set senddelay 0.02
 waitquiet 0.2 0.2
 flash 0.1

:start
  send 'AT!SCACT?^m'
  waitfor 10 "!SCACT: 1,1","!SCACT: 1,0"
  if % = -1 goto error
  if c > 10 goto error
  if % = 0 goto connected
  if % = 1 goto disconnected

:error
  exit 1

:connected
 print "connected"
 exit 0

:disconnected
 print "disconnected"
 exit 0
