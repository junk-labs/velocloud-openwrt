 fi
@@ -429,6 +441,9 @@ AM_CONDITIONAL(WITH_INTERFACE_VOICE, test "x$with_interface_voice" = "xyes")
 if test "x$with_interface_voice" = "xyes"; then
     MM_INTERFACE_VOICE_SUPPORTED=1
